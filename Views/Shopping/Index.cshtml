@model IEnumerable<Hotels>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/Shared/_LayoutShopping.cshtml";
}

<div class="container" dir="rtl">
    @foreach(var item in Model)
    {
        <div class="row mt-5">
            <div class="col-md-9">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <img src="~/images/@item.HotelImage" class="img-thumbnail"/>
                            </div>
                            <div class="col-sm-9">
                                <h1 class="alert alert-success">@item.HotelName</h1>
                                <hr />
                                <small>@item.HotelAddress</small>
                            </div>
                            <div class="row">
                                <div class="col col-sm-9 text-center">
                                    <a asp-action="Rooms" asp-route-id="@item.HotelID">
                                        <button class="btn btn-primary">حجز</button>
                                    </a>
                                    
                                </div>
                             </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
            </div>
        </div>
    }
    
</div>