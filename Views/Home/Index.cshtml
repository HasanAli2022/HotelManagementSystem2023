@model IEnumerable<Hotels>
@{
    ViewData["Title"] = "الصفحة الرئيسة";
}

<div class="container" dir="rtl">
    
     <form asp-controller="Home" asp-action="CreateNewRecord" method="post">
            <div class="row">
                <div class="col">
                    <label for="HotelName" class="p-2">
                        اسم الفندق
                    </label>
                <input type="text" id="HotelName" name="HotelName" class="form-control form-control-sm"  />
                <span asp-validation-for="@Model.First().HotelName" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col col-sm-6">
                    <label for="HotelAddress" class="p-2">
                        عنوان الفندق
                    </label>
                <input type="text" id="HotelAddress" name="HotelAddress" class="form-control form-control-sm"  />
                <span asp-validation-for="@Model.First().HotelAddress" class="text-danger"></span>
                </div>
                <div class="col col-sm-6">
                    <label for="HotelCity" class="p-2">
                        المدينة
                    </label>
                <input type="text" id="HotelCity" name="HotelCity" class="form-control form-control-sm"  />
                <span asp-validation-for="@Model.First().HotelCity" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col col-sm-6">
                    <label for="HotelEmail" class="p-2">
                        البريد الإلكتروني
                    </label>
                <input type="email" id="HotelEmail" name="HotelEmail" class="form-control form-control-sm"  />
                <span asp-validation-for="@Model.First().HotelEmail" class="text-danger"></span>
                </div>
                <div class="col col-sm-6">
                    <label for="HotelPhone" class="p-2">
                        الهاتف
                    </label>
                <input type="tel" id="HotelPhone" name="HotelPhone" class="form-control form-control-sm"  />
                <span asp-validation-for="@Model.First().HotelPhone" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label for="HotelImage" class="p-2">
                        صورة الفندق
                    </label>
                <input type="text" id="HotelImage" name="HotelImage" class="form-control form-control-sm"  />
                <span asp-validation-for="@Model.First().HotelImage" class="text-danger"></span>
                </div>
               
            </div>
            <div class="row m-2">
                <div class="col">
                   <button class="btn btn-success" type="submit">حفظ</button>
                </div>

            </div>
           
        </form>

    @* Searching Form by city *@
    <div class="search-form mt-5 mb-5">
        <form class="m-3" asp-controller="Home" asp-action="Index" method="post">
            <div class="row">
                <div class="col-1 text-start">
                    <label for="HotelCity">المدينة</label>
                </div>
                <div class="col-8">
                    <input type="text" id="HotelCity" name="HotelCity" required class="form-control form-control-sm" />
                </div>
                <div class="col-3">
                    <button type="submit" class="btn btn-success">ابحث</button>
                </div>               
            </div>

        </form>
    </div>
    <table class="table table-bordered mt-5 text-centered">
        <thead>
            <tr class="text-center">
                <th>رقم الفندق</th>
                <th>اسم الفندق</th>
                <th>عنوان الفندق</th>
                <th>المدينة</th>
                <th>رقم الهاتف</th>
                <th>البريد الإلكتروني</th>
                <th colspan="2">الإجراء</th>
            </tr>
            
        </thead>
        <tbody>
            @if(Model != null)
            {
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.HotelID</td>
                        <td>@item.HotelName</td>
                        <td>@item.HotelAddress</td>
                        <td>@item.HotelCity</td>
                        <td>@item.HotelPhone</td>
                        <td>@item.HotelEmail</td>
                        <td><a asp-action="DeleteHotel" asp-route-id="@item.HotelID"><i class="fa fa-trash text-danger"></i></a></td>
                        <td><a asp-action="EditHotel" asp-route-id="@item.HotelID"><i class="fa fa-edit text-success"></i></a></td>
                    </tr>
                }
            }
            
            
        </tbody>
    </table>

</div>

